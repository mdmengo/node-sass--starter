{
  "name": "node-sass-starter",
  "version": "1.0.0",
  "description": "A scss starter based on node-sass",
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "bemify": "^0.1.2",
    "browser-sync": "^2.23.6",
    "cssnano": "^3.10.0",
    "fs-extra": "^5.0.0",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "postcss-fixes": "^2.0.1",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-pxtorem": "^4.0.1",
    "sass-lint": "^1.12.1"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass src/sass/main.scss src/css/main.css --source-map true --output-style expanded",
    "css-watch": "npm run css-build -- --watch",
    "css-postcss": "postcss src/css/main.css -c postcss.config.js -o build/css/main.min.css",
    "sass-lint": "sass-lint -c .sass-lint.yml -v -q",
    "sync": "browser-sync start --directory --server --files \"src/**/*.css, src/**/*.html, src/**/*.js\" --https",
    "js-build": "babel src/js/main.js --out-file src/js/main-compiled.js --source-maps --watch",
    "start": "npm-run-all -p css-watch js-build sync"
  },
  "author": "mdmengo",
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^7.0.0"
  }
}
