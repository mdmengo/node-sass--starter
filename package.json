{
  "name": "node-sass-starter",
  "version": "1.0.0",
  "description": "A scss starter based on node-sass",
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "bemify": "^0.1.2",
    "cssnano": "^3.10.0",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.17",
    "postcss-cli": "^4.1.1",
    "sass-lint": "^1.12.1"
  },
  "scripts": {
    "css-build": "node-sass src/sass/main.scss src/css/main.css --source-map true --output-style expanded",
    "css-watch": "npm run css-build -- --watch",
    "prefix": "postcss src/css/main.css --use autoprefixer --no-map -o build/css/main.min.css",
    "sass-test": "sass-lint -c .sass-lint.yml -v -q",
    "deploy": "npm run sass-test && npm run css-build && npm run prefix"
  },
  "author": "mdmengo",
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^7.0.0"
  }
}
